{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dependsOn": ["^db:generate", "^db:push"],
      "cache": false,
      "persistent": true,
      "dotEnv": [".env.development.local", ".env.local", ".env.development", ".env"]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "dotEnv": [".env"]
    },
    "db:push": {
      "cache": false
    },
    "test": {
      "cache": false,
      "dotEnv": [".env.test", ".env"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dotEnv": [".env.test.local", ".env.test", ".env"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "test:cov": {
      "dotEnv": [".env.test", ".env"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "studio": {
      "cache": false
    }
  }
}
